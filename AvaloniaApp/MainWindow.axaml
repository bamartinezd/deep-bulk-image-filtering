<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="1000" d:DesignHeight="700"
        x:Class="AvaloniaApp.MainWindow"
        Title="Deep Bulk Image Filtering"
        Width="1000" Height="700"
        MinWidth="800" MinHeight="600">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <TextBlock Grid.Row="0" 
                   Text="Deep Bulk Image Filtering" 
                   FontSize="24" 
                   FontWeight="Bold" 
                   HorizontalAlignment="Center" 
                   Margin="0,0,0,20"/>
        
        <!-- Source Folder Selection -->
        <Border Grid.Row="1" 
                BorderBrush="{DynamicResource SystemControlForegroundBaseMediumBrush}" 
                BorderThickness="1" 
                CornerRadius="4" 
                Padding="15" 
                Margin="0,0,0,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0">
                    <TextBlock Text="Source Folder" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <TextBlock x:Name="SourcePathText" 
                               Text="No folder selected" 
                               Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                               TextWrapping="Wrap"/>
                </StackPanel>
                
                <Button Grid.Column="1" 
                        x:Name="SelectSourceButton"
                        Content="Browse..." 
                        Click="OnSelectSourceFolder"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"/>
            </Grid>
        </Border>
        
        <!-- Destination Folder Selection -->
        <Border Grid.Row="2" 
                BorderBrush="{DynamicResource SystemControlForegroundBaseMediumBrush}" 
                BorderThickness="1" 
                CornerRadius="4" 
                Padding="15" 
                Margin="0,0,0,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0">
                    <TextBlock Text="Destination Folder" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <TextBlock x:Name="DestinationPathText" 
                               Text="No folder selected" 
                               Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                               TextWrapping="Wrap"/>
                </StackPanel>
                
                <Button Grid.Column="1" 
                        x:Name="SelectDestinationButton"
                        Content="Browse..." 
                        Click="OnSelectDestinationFolder"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"/>
            </Grid>
        </Border>
        
        <!-- Processing Controls -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,15">
            <Button x:Name="StartProcessingButton" 
                    Content="Start Processing" 
                    Click="OnStartProcessing"
                    IsEnabled="False"
                    Padding="20,10"
                    Margin="0,0,10,0"/>
            <Button x:Name="StopProcessingButton" 
                    Content="Stop" 
                    Click="OnStopProcessing"
                    IsEnabled="False"
                    Padding="20,10"/>
        </StackPanel>
        
        <!-- Progress and Preview Area -->
        <Grid Grid.Row="4" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Progress Section -->
            <Border Grid.Column="0" 
                    BorderBrush="{DynamicResource SystemControlForegroundBaseMediumBrush}" 
                    BorderThickness="1" 
                    CornerRadius="4" 
                    Padding="15" 
                    Margin="0,0,10,0">
                <StackPanel>
                    <TextBlock Text="Processing Progress" FontWeight="SemiBold" Margin="0,0,0,10"/>
                    
                    <!-- Progress Bar -->
                    <ProgressBar x:Name="ProcessingProgressBar" 
                                 Height="20" 
                                 Margin="0,0,0,10"/>
                    
                    <!-- Progress Details -->
                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Processed:" FontSize="12"/>
                            <TextBlock x:Name="ProcessedCountText" Text="0" FontWeight="Bold"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="Copied:" FontSize="12"/>
                            <TextBlock x:Name="CopiedCountText" Text="0" FontWeight="Bold"/>
                        </StackPanel>
                    </Grid>
                    
                    <!-- Current File Info -->
                    <Border BorderBrush="{DynamicResource SystemControlForegroundBaseMediumBrush}" 
                            BorderThickness="1" 
                            CornerRadius="4" 
                            Padding="10">
                        <StackPanel>
                            <TextBlock Text="Current File:" FontSize="12" FontWeight="SemiBold"/>
                            <TextBlock x:Name="CurrentFileText" 
                                       Text="No file being processed" 
                                       TextWrapping="Wrap"
                                       FontSize="11"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Border>
            
            <!-- Image Preview Section -->
            <Border Grid.Column="1" 
                    BorderBrush="{DynamicResource SystemControlForegroundBaseMediumBrush}" 
                    BorderThickness="1" 
                    CornerRadius="4" 
                    Padding="15">
                <StackPanel>
                    <TextBlock Text="Image Preview" FontWeight="SemiBold" Margin="0,0,0,10"/>
                    
                    <Border BorderBrush="{DynamicResource SystemControlForegroundBaseMediumBrush}" 
                            BorderThickness="1" 
                            CornerRadius="4" 
                            Height="200"
                            Background="{DynamicResource SystemControlBackgroundBaseLowBrush}">
                        <Image x:Name="PreviewImage" 
                               Stretch="Uniform"
                               Margin="5"/>
                    </Border>
                    
                    <TextBlock x:Name="ImageInfoText" 
                               Text="No image selected" 
                               FontSize="11" 
                               Margin="0,10,0,0"
                               TextWrapping="Wrap"/>
                </StackPanel>
            </Border>
        </Grid>
        
        <!-- Status Bar -->
        <Border Grid.Row="5" 
                BorderBrush="{DynamicResource SystemControlForegroundBaseMediumBrush}" 
                BorderThickness="1" 
                CornerRadius="4" 
                Padding="10">
            <TextBlock x:Name="StatusText" 
                       Text="Ready to process images" 
                       VerticalAlignment="Center"/>
        </Border>
    </Grid>
</Window>
